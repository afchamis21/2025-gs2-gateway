{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/auth/{**catch-all}" }
        ]
      },
      "model-route": {
        "ClusterId": "model-cluster",
        "Match": {
          "Path": "/api/models/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/models/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://authservice:8080"
          }
        }
      },
      "model-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://modelservice:8080"
          }
        }
      }
    }
  }
}